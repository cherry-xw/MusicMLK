<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp" >
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:layout_weight="1">

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:layout_weight="1">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_weight="9"
	        android:layout_height="match_parent"
	        android:background="@drawable/listdialog_bg"
	        android:orientation="vertical" >
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="45dp"
	            android:orientation="horizontal" >
	
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="2"
	                android:gravity="center"
	                android:orientation="vertical" >
	
	                <TextView
	                    android:id="@+id/list_name"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="@string/list_default"
	                    android:textColor="@color/black"
	                    android:textSize="18sp" />
	            </LinearLayout>
	
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="2"
	                android:orientation="horizontal" >
	
	                <LinearLayout
	                    android:layout_width="0dp"
	                    android:layout_height="match_parent"
	                    android:layout_weight="7" >
	                    
	                    
	                </LinearLayout>
	
	                
	
	                <LinearLayout
	                    android:layout_width="0dp"
	                    android:gravity="center"
	                    android:layout_height="match_parent"
	                    android:layout_weight="3" >
	                    
					</LinearLayout>
	                
	            </LinearLayout>
	        </LinearLayout>
	
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="3dp"
	            android:background="@color/half_dimgrey" />
	
	        <ListView
	            android:id="@+id/musiclistview"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:divider="@color/mistyrose"
	            android:dividerHeight="2px" >
	        </ListView>
	    </LinearLayout>
	    
	    
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >
	        <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:orientation="vertical" >
		    </LinearLayout>
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="4"
		        android:orientation="vertical" >

		        <TextView
		            android:id="@+id/txt_default_list"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/label_1"
		            android:textSize="8sp"
		            android:gravity="center"
		            android:textColor="@color/black"
		            android:text="" />

		        <TextView
		            android:id="@+id/txt_one_list"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/label_1"
		            android:textSize="8sp"
		            android:gravity="center"
		            android:textColor="@color/black"
		            android:text="" />

<!-- 		        <TextView
		            android:id="@+id/txt_two_list"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/label_1"
		            android:textSize="8sp"
		            android:gravity="center"
		            android:textColor="@color/black"
		            android:text="" /> -->

		    </LinearLayout>
	    </LinearLayout>
	</LinearLayout>

</LinearLayout>