<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_antiquewhite"
    android:gravity="center|top"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="详细信息"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/half_darkblue" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginBottom="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/half_snow"
            android:gravity="center|top"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView0"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/musicname" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="歌名"
                        android:textColor="@color/half_black"
                        android:textSize="10sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/msgmusicname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    style="?android:attr/textViewStyle"
                    android:editable="false"
                    android:gravity="center"
                    android:textColor="#000033"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textss"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/half_darkblue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/singer" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="歌手"
                        android:textColor="@color/half_black"
                        android:textSize="10sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/msgsinger"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:editable="false"
                    style="?android:attr/textViewStyle"
                    android:gravity="center"
                    android:textColor="#000033"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tesaxtss"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/half_darkblue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/special" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="专辑"
                        android:textColor="@color/half_black"
                        android:textSize="10sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/msgoptical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:editable="false"
                    style="?android:attr/textViewStyle"
                    android:gravity="center"
                    android:textColor="#000033"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textsasss"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/half_darkblue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/musicsize" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="大小"
                        android:textColor="@color/half_black"
                        android:textSize="10sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/msgmusicsize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:editable="false"
                    android:gravity="center"
                    style="?android:attr/textViewStyle"
                    android:textColor="#000033"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/texgdftss"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/half_darkblue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/time" />

                    <TextView
                        android:id="@+id/textV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="时长"
                        android:textColor="@color/half_black"
                        android:textSize="10sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/msgtime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    style="?android:attr/textViewStyle"
                    android:editable="false"
                    android:gravity="center"
                    android:textColor="#000033"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/texyttss"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/half_darkblue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imeView3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/route" />

                    <TextView
                        android:id="@+id/texew6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="路径"
                        android:textColor="@color/half_black"
                        android:textSize="10sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/msgroute"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:editable="false"
                    style="?android:attr/textViewStyle"
                    android:gravity="center"
                    android:textColor="#000033"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <Button
            android:id="@+id/msgmodifycancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消" />

        <Button
            android:id="@+id/msgmodifydown"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>